@model IEnumerable<Models.EF.food_recipe>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header card-header-warning">
                            <h4 class="card-title"Food Recipe List</h4>
                            <p class="card-category">@Html.ActionLink("Create New", "Create")</p>
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-hover">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.content)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.pay_the_fee)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.image)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.created_at)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.account.name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.type_recipe.name)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.content)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.pay_the_fee)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.image)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.created_at)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.account.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.type_recipe.name)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
