@model Models.EF.food_recipe

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
    var getList = ViewBag.FoodRecipeDetail as IEnumerable<Models.EF.food_recipe_detail>;
}
    <section class="post-news-area section-padding-100-0 mb-70">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Post Details Content Area -->
                <div class="col-12 col-lg-4 col-xl-5">
                    <div class="post-details-content mb-100">
                        <div class="blog-thumbnail mb-50">
                            <img src="@Model.image" alt="">
                        </div>
                        <div class="blog-content">
                            <a href="#" class="post-tag">Công thức</a>
                            <h4 class="post-title">@Model.name</h4>
                            <div class="post-meta mb-50">
                                <a href="#" class="post-date">@Model.created_at</a>
                                <a href="#" class="post-author">By @Model.account.name</a>
                            </div>
                            @foreach (var item in getList)
                            {
                                <h5 class="mb-30">Step @item.step</h5>
