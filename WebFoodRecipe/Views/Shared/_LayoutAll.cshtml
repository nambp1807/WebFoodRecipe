            <a href="~/Images/img/bg-img/insta9.jpg" class="img-zoom" title="Instagram Image">+</a>
        </div>

        <!-- Single Instagram -->
        <div class="single-instagram">
            <img src="~/Images/img/bg-img/insta10.jpg" alt="">
            <!-- Image Zoom -->
            <a href="~/Images/img/bg-img/insta10.jpg" class="img-zoom" title="Instagram Image">+</a>
        </div>
    </div>
