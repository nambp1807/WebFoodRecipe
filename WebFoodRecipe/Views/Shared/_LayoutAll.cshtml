            <!-- Image Zoom -->
            <a href="~/Images/img/bg-img/insta5.jpg" class="img-zoom" title="Instagram Image">+</a>
        </div>

        <!-- Single Instagram -->
        <div class="single-instagram">
            <img src="~/Images/img/bg-img/insta6.jpg" alt="">
            <!-- Image Zoom -->
            <a href="~/Images/img/bg-img/insta6.jpg" class="img-zoom" title="Instagram Image">+</a>
        </div>

        <!-- Single Instagram -->
        <div class="single-instagram">
            <img src="~/Images/img/bg-img/insta7.jpg" alt="">
            <!-- Image Zoom -->
            <a href="~/Images/img/bg-img/insta7.jpg" class="img-zoom" title="Instagram Image">+</a>
        </div>

        <!-- Single Instagram -->
        <div class="single-instagram">
            <img src="~/Images/img/bg-img/insta8.jpg" alt="">
            <!-- Image Zoom -->
            <a href="~/Images/img/bg-img/insta8.jpg" class="img-zoom" title="Instagram Image">+</a>
        </div>

        <!-- Single Instagram -->
        <div class="single-instagram">
            <img src="~/Images/img/bg-img/insta9.jpg" alt="">
